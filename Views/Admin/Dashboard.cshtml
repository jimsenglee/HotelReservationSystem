@using HotelRoomReservationSystem.Models.ViewModels

@{
    ViewData["Title"] = "Hotel Dashboard";
}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<div class="container mt-0">
    <br /><br />
    <p class="h2 text-white">
        Overview
    </p>

    <div id="target">
        <partial name="_Overview">
    </div>

    <section class="charts row g-3">
        <!-- Bar Chart -->
        <partial name="_WeeklySalesBar" />

        <!-- Horizontal Bar Chart -->
        <partial name="_WeeklyBookingsPolar" />
    </section>

    <br />
    <!-- Line Chart -->
    <div class="rounded border border-secondary-subtle p-3">
        <canvas id="occupancyChart" class="w-100 h-auto"></canvas>
    </div>
</div>


<!-- Inject JSON data for JavaScript -->
<script id="weekLabels" type="application/json">@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.weekLabels))</script>

<script id="weeklySalesData" type="application/json">@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.weeklySalesData))</script>

@* Sales Data *@
<script id="monthlySalesData" type="application/json">@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.monthlySalesData))</script>

<script id="bookingsData" type="application/json">@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.weeklyBookingsData))</script>

@* Bookings Data *@
<script id="weeklyBookingsData" type="application/json">@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.weeklyBookingsData))</script>

<script id="monthlyBookingsData" type="application/json">@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.monthlyBookingsData))</script>

@* Revenue Data *@
<script id="revenueData" type="application/json">
    @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.moneyEarnInEachTime))
</script>

@* Reservation Data *@
<script id="reservationData" type="application/json">
    @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.reservationEarnInEachTime))
</script>

@* Occupancy Rate *@
<script id="GetDailyOccupancyRates" type="application/json">
    @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.GetDailyOccupancyRates))
</script>

@* Top Sell *@
<script id="categoryList" type="application/json">
    @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.categoryList))
</script>

<script id="topSellingCategory" type="application/json">
    @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.topSellingCategory))
</script>

<!--Tittle-->
<script id="barChartTitle" type="application/json">@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject("Weekly Sales"))</script>
