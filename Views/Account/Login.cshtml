 @model HotelRoomReservationSystem.Models.ViewModels.LoginVM
@{
    //Layout = "~/Views/Shared/_Layout.cshtml";

}
<link rel="stylesheet" href="/css/loginNregister.css" type="text/css" />
<div id="container">
    <div class="left-section">
        <div class="illustration">
            <!-- <img src="loginViews.jpg" alt="Illustration" style="object-fit: cover;"> -->
        </div>
    </div>
    <div class="right-section">
        <div class="form-container">
            <h1>Welcome to our Hotel Website!</h1>
            <p>Please enter your details</p>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="validation-summary">
                    @if (ViewBag.LockoutEndTime != null)
                    {
                        <p id="countdown-message">Your account is locked. Time remaining: <span id="countdown"></span></p>
                    }
                </div>
                <div class="form-group">
                    <input asp-for="email" type="text" placeholder="Email" required >
                    <span asp-validation-for="email" class="validation-error"></span>
                </div>
                <div class="form-group password-group">
                    <input asp-for="password" id="password"  type="password" placeholder="Password" required>
                    <svg id="togglePassword" xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                         fill="currentColor" class="bi bi-eye-slash" viewBox="0 0 16 16">
                        <path d="M13.359 11.238C15.06 9.72 16 8 16 8s-3-5.5-8-5.5a7 7 0 0 0-2.79.588l.77.771A6 6 0 0 1 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755q-.247.248-.517.486z" />
                        <path d="M11.297 9.176a3.5 3.5 0 0 0-4.474-4.474l.823.823a2.5 2.5 0 0 1 2.829 2.829zm-2.943 1.299.822.822a3.5 3.5 0 0 1-4.474-4.474l.823.823a2.5 2.5 0 0 0 2.829 2.829" />
                        <path d="M3.35 5.47q-.27.24-.518.487A13 13 0 0 0 1.172 8l.195.288c.335.48.83 1.12 1.465 1.755C4.121 11.332 5.881 12.5 8 12.5c.716 0 1.39-.133 2.02-.36l.77.772A7 7 0 0 1 8 13.5C3 13.5 0 8 0 8s.939-1.721 2.641-3.238l.708.709zm10.296 8.884-12-12 .708-.708 12 12z" />
                    </svg>
                    <span asp-validation-for="password" class="validation-error"></span>
                </div>

                <div class="checkbox-group">
                    <label style="display: flex;align-items: center;">
                        <input asp-for="RememberMe" type="checkbox"> Remember for 30
                        days
                    </label>
                    <a href="/Account/forgetPassword" id="forgetPass">Forgot password?</a>
                   
                </div>
                <div class="checkbox-group">
                    <label style="display: flex;align-items: center;">
                       
                    </label>
                    <a href="/Account/AccountRecovery" id="forgetPass">Recovery Account?</a>

                </div>
                
                
                <button type="submit" class="signup-btn">Sign Up</button>
                
            </form>
            <p class="login-link">
                Don't have an account? <a href="/Account/RegisterForm">Sign Up</a>
            </p>
           
        </div>
    </div>
</div>
<script src="/js/jquery.min.js"></script>
<script src="/js/jquery.unobtrusive-ajax.min.js"></script>
<script src="/js/jquery.validate.min.js"></script>
<script src="/js/jquery.validate.unobtrusive.min.js"></script>
<script src="/js/app.js" asp-append-version="true"></script>
<script>
   
    @if (ViewBag.LockoutEndTime != null)
    {
        <text>
            const lockoutEndTime = new Date('@ViewBag.LockoutEndTime'); 
            const countdownMessage = document.getElementById('countdown-message');
            const countdownElement = document.getElementById('countdown');

            function updateCountdown() {
                const now = new Date();
                const timeDifference = lockoutEndTime - now;

                if (timeDifference > 0) {
                    const minutes = Math.floor((timeDifference % (1000 * 60 * 60)) / (1000 * 60));
                    const seconds = Math.floor((timeDifference % (1000 * 60)) / 1000);

                    countdownElement.textContent = `${minutes}m ${seconds}s`;
                } else {
                    countdownElement.textContent = "Unlocked";
                    countdownMessage.textContent = "Your account is now unlocked. Please try again.";
                    clearInterval(interval);
                }
            }

            // Update countdown every second
            const interval = setInterval(updateCountdown, 1000);
            updateCountdown(); // Initialize immediately
        </text>
    }
   
</script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
@if (TempData["SuccessMessage"] != null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Success',
            text: '@TempData["SuccessMessage"]'
        });
    </script>
}
@if (TempData["errorPhone"] != null)
{
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: '@Html.Raw(TempData["errorPhone"])'
        });
    </script>
}